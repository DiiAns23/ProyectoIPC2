@model Repetido.Models.Modelos.LoginView
@{
    ViewBag.Title = "Login";
}
@section Image{
    '/Public/Image/PPP.jpg'
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row align-content-lg-end justify-content-center redondear" style="height:95vh">
        <div class="col col-md-4">
            <div class="card font-weight-bold">
                <div class="card-body gris">
                    <div>
                        @Html.TextBoxFor(dato => dato.usuario, "", new { @class = "form-control redondear", @type = "text", @placeholder="Usuario" })
                    </div>
                    <br />
                    <div>
                        @Html.TextBoxFor(dato => dato.pass, "", new { @class = "form-control redondear", @type = "password", @placeholder = "Password" })
                    </div>
                    <div class="row mt-2">
                        <div class="col col-md-6">
                            <input type="submit" value="Ingresar" class="btn btn-block btn-outline-warning green2 text-white letra redondear" />
                        </div>
                        <div class="col col-md-6">
                            <a href="~/Usuarios/Registrar" class="btn btn-block red btn-outline-warning text-white letra redondear" type="reset">Registrarse</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
 